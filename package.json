{
  "name": "waf-dashboard",
  "version": "1.0.0",
  "description": "WAF ModSecurity CRS Dashboard",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "dev:full": "concurrently \"npm run dev:db\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "dev:db": "docker-compose -f docker-compose.dev.yaml up -d mongo redis",
    "dev:db:stop": "docker-compose -f docker-compose.dev.yaml stop mongo redis",
    "dev:with-waf": "docker-compose -f docker-compose.dev.yaml up -d && concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npx ts-node src/main.ts",
    "frontend:dev": "cd frontend && npm run dev",
    "backend:install": "cd backend && npm install",
    "frontend:install": "cd frontend && npm install",
    "install:all": "npm install && npm run backend:install && npm run frontend:install",
    "build": "npm run backend:build && npm run frontend:build",
    "backend:build": "cd backend && npm run build",
    "frontend:build": "cd frontend && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose up --build -d",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@mui/x-charts": "^8.10.0",
    "@mui/x-data-grid": "^8.10.0",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.8.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
